doctype html
html(lang='en')
  head
    block head
      meta(charset='UTF-8')
      //- meta(name='viewport' content='width=device-width, initial-scale=1.0')
      meta(name='viewport' content='initial-scale=1.0, user-scalable=no, maximum-scale=1')
      link(rel='stylesheet' href='/css/style.css')
      link(rel='shortcut icon' type='image/png' href='/img/favicon.png')
      link(rel='stylesheet' href='https://fonts.googleapis.com/css?family=Lato:300,300i,700')

      title Natours | #{title}

  body

    // HEADER
    include _header

    // CONTENT
    block content
    //- main.main
      div.card-container
        div.card

          div.card__header
            div.card__picture
              div.card__picture-overlay &nbsp;
                img.card__picture-img(src='img/tours/tour-1-cover.jpg' alt='Tour 1')
            h3.heading-tertiary
              span The Forest Hiker

          div.card__details
            h4.card__sub-heading Easy 5-day tour
              p.card__text Breathtaking hike through the Canadian Banff National Park

            div.card__data
              svg.card__icon
                use(xlink:href='img/icons.svg#icon-map-pin')
              span Banff, Canada

            div.card__data
              svg.card__icon
                use(xlink:href='img/icons.svg#icon-calendar')
              span April 2021

            div.card__data
              svg.card__icon
                use(xlink:href='img/icons.svg#icon-flag')
              span 3 stops

            div.card__data
              svg.card__icon
                use(xlink:href='img/icons.svg#icon-user')
              span 25 people

    // FOOTER
    include _footer
    script(src='https://unpkg.com/axios/dist/axios.min.js' defer)